{% extends "./layout.html.jinja" %}

{% block body %}
<div class="book off-canvas off-canvas-sidebar-show">
    <div id="sidebar" class="off-canvas-sidebar">
        {% block search_input %}
        <div id="book-search-input" role="search">
            <input class="form-input" type="text" placeholder="Type to search" />
        </div>
        {% endblock %}
        {% include 'summary.html.jinja' %}
    </div>
    <a class="off-canvas-overlay" href="#close"></a>
    <div class="off-canvas-content">
        <div class="content">
            {% include 'header.html.jinja' %}
            <div class="page-wrapper container">
                <div class="columns">
                    <div class="prev-chapter column col-1 col-mr-auto">
                        <div class="text-center">
                            {%- if page.previous_chapter -%}
                                <a href="{{ page.previous_chapter.link|relative_path }}">
                                    <i class="icon icon-arrow-left"></i>
                                </a>
                            {%- endif -%}
                        </div>
                    </div>
                    <div class="chapter column col-10 col-mx-auto">
                        <article class="chapter-body">
                            {{ page.content|safe }}
                        </article>
                    </div>
                    <div class="next-chapter column col-1 col-ml-auto">
                        <div class="text-center">
                            {%- if page.next_chapter -%}
                                <a href="{{ page.next_chapter.link|relative_path }}">
                                    <i class="icon icon-arrow-right"></i>
                                </a>
                            {%- endif -%}
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>
{% endblock %}
