<?xml version="1.0"?>
<package version="2.0" xmlns="http://www.idpf.org/2007/opf" unique-identifier="BookId">
 
  <metadata xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:opf="http://www.idpf.org/2007/opf">
    <dc:title>${book.title}</dc:title>
    <dc:language>${book.language}</dc:language>
    <dc:identifier id="BookId" opf:scheme="ISBN">${book.isbn}</dc:identifier>
    {%- for author in authors -%}
      {%- if loop.first -%}
      <dc:creator opf:file-as="${author}" opf:role="aut">${author}</dc:creator>
      {%- else -%}
      <dc:contributor opf:file-as="${author}" opf:role="aut">${author}</dc:contributor>
    {%- endfor -%}
    <dc:date>${date}</dc:date>
    <dc:publisher>${book.publisher}</dc:publisher>
  </metadata>
 
  <manifest>
    <item href="stylesheet.css" id="css" media-type="text/css"/>
    {%- if book.cover is not None -%}
    <item href="cover.jpg" id="cover" media-type="image/jpeg"/>
    {%- endif -%}

    <item href="titlepage.xhtml" id="titlepage" media-type="application/xhtml+xml"/>

% for i in range(len(chapters) ):
    <item href="${'chapter_%03d.xhtml'%i}" id="${'id%03d'%i}" media-type="application/xhtml+xml"/>
% endfor

    <item href="toc.ncx" media-type="application/x-dtbncx+xml" id="ncx"/>
  </manifest>
 
  <spine toc="ncx">
    <itemref idref="titlepage"/>
% for i in range(len(chapters) ):
    <itemref idref="${'id%03d'%i}"/>
% endfor
  </spine>
 
  <guide>
    <reference href="titlepage.xhtml" type="cover" title="Cover"/>
  </guide>
 
</package>

